<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="15dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/contatto_foto"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_launcher_round"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contatto_nickname"
                android:layout_toRightOf="@+id/contatto_foto"
                android:textSize="15dp"
                android:text="Giada Gabriele"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contatto_numeroDiLavoro"
                android:layout_below="@+id/contatto_foto"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:text="3338478393"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contatto_numeroPersonale"
                android:layout_below="@+id/contatto_numeroDiLavoro"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:text="3497219633"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contatto_emailDiLavoro"
                android:layout_below="@+id/contatto_numeroPersonale"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:text="gbrgdi97e49d086e@studenti.unical.it"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contatto_emailPersonale"
                android:layout_below="@+id/contatto_emailDiLavoro"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:text="giadagabriele@outlook.com"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>